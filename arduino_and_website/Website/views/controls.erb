<!DOCTYPE html>
<html>
<head>
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
  <link rel="stylesheet" href="style.css">
  <link rel="javascript" href="app.js">

  <!-- Firebase related stuff -->
  <script src='https://cdn.firebase.com/js/client/2.2.1/firebase.js'></script>
  <script src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
</head>

<body>
<div class="container">
  <div class= "row">
  <!-- Turn servo left -->
  <div class= "col-md-2 col-sm-2 col-xs-2">
    <a class="btn btn-primary" id="left-button" href="/left"><span class="glyphicon glyphicon-chevron-left"></span>&nbsp;</a>
  </div>

    <!-- Return servo to orginial location -->
  <div class ="col-md-8 col-sm-8 col-xs-8"id="wrapper">
    <a class="btn btn-primary" id="down-button" href="/forward">Return to original position</a>
  </div>

    <!-- Turn servo right-->
  <div class= "col-md-2 col-sm-2 col-xs-2">
    <a class="btn btn-primary" id= "right-button" href="/right"><span class="glyphicon glyphicon-chevron-right"></span>&nbsp;</a>
  </div>
  </div>

  <div class= "row buttons">

    <div class= "alarm-button">
      <% if @@ALARM==0 %>
        <a class="btn btn-primary" id="set-alarm" href="/setalarm">Trigger Sensor</a>
      <% else %>
        <a class= "btn btn-primary" id="disable-alarm" href="/disablealarm">Disable Sensor</a>
      <% end %>
    </div>
  </div>

  <div class="temp-box">
  Temp:
  <p id="temp"></p>
</div>
<script>
  var myDataRef = new Firebase('https://amber-heat-814.firebaseio.com/');
  var temp = myDataRef.child('temp');
  myDataRef.on('value', function(snapshot) {
    var message = snapshot.val();
    //console.log(message.temp);
    document.getElementById('temp').innerHTML = message.temp;
  });
</script>
</div>

</div>
</body>

</html>
